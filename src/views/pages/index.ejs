    <div id="wrapper">

      <!-- Sidebar -->
      <ul class="sidebar navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/index.ejs">
            <img class="sidebar_icon" src = "/img/profileicon.png"></i>
