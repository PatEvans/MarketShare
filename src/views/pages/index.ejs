      <div id="content-wrapper">

        <div class="container-fluid"style="margin-left:6%;margin-right:6%;">

          <!-- Breadcrumbs-->
          <ol class="breadcrumb"style="position:relative;left:-6%;">
            <li class="breadcrumb-item">
              <a href="#">Profile</a>
            </li>
            <li class="breadcrumb-item active">Overview</li>
          </ol>
		  <div class="profileHeader">

			<img class="profileImage" src="img/profile.png"></img>
		      <div class="profileTitle">
			 <%- user.name %>
			</div>
		  </div>
      <!-- Button to include new stock -->

            <div class="card-header" style="margin-right:12.5%;margin-bottom:10px;padding-top:0px;padding-bottom:0px;padding-left:0px;border-style: solid;border-color:#e0e0e0;">
        <button class="button" style="background-color:#0F9D58;" onclick="rdr()">New Stock</button>
         <button class="button" style="position:relative;left:-5px;background-color:#DB4437;" onclick="rdr()">Delete Stock</button>
        <button class="button"style="position:relative;left:-10px;background-color:#757575;" onclick="rdrInfo()">Edit Info</button><br>
</div>
<div class="row"style="">
          <!-- Icon Cards-->

		  <div class="card mb-3 col-xl-3 col-sm-10 profilePane">

            <div class="card-header">
              <div class="proftext">About Me</div></div>

            <div class="col-xl-12 col-sm-12 mb-3 ">
              <div class="card-body profileAbout">
				        <div class=image-box>
                  <i class="fas fa-fw fa-life-ring"></i>
					    </div>


				  <div class="profileInfo">Date of Birth:  <div class="valueText"> <%- user.dob %></div></div>
				  <div class="profileInfo">Employment:  <div class="valueText"> <%- user.employer %></div></div>
				  <div class="profileInfo">Went to:   <div class="valueText"> <%- user.education %></div></div>
				  <div class="profileInfo">Lives in:  <div class="valueText"> <%- user.city %></div></div>
				   <div class="profileInfo">Likes:  <div class="valueText"> <%- user.likesDislikes %></div></div>

                </div>

          </div>

          </div>
		  <!-- Area Chart Example-->
          <div class="card mb-3 col-xl-7 col-sm-10 profilePane ">
            <div class="card-header">
              <i class="fas fa-chart-area"></i>
              Portfolio Performance</div>
            <div class="card-body ">
              <canvas id="myAreaChart" width="100%" height="30%"></canvas>
            </div>

          </div>
          </div>

         <div class="row"style="">
		 <!-- Area Chart Example-->
          <div class="card mb-3 col-xl-3 col-sm-10 profilePane ">
            <div class="card-header">
              <i class="fas fa-chart-area"></i>
              Stocks by Industry</div>
            <div class="card-body profilePie">
              <canvas id="myPieChart" width="70px" height="70"></canvas>
            </div>

          </div>
		  <div class="card mb-3 col-xl-7 col-sm-10 profilePane" style="margin-right:12.5%;">
            <div class="friends_name"><%- user.name %> </div>

            <div class="card-header" style="background-color: palegreen;">
                <img class="sidebar_image" src = "/img/profile.png"></img>
              Hot Stock</div>
            <div class="card-body">
                Their Tesla Stock has gained 4 points!
            </div>
            <div class="card-footer small text-muted">
              Yesterday at 11:59 PM
            </div>
          </div>
		  </div>
		  <div class="card mb-3" style="margin-right:12.5%;">
            <div class="friends_name"><%- user.name %> </div>

            <div class="card-header" style="background-color: lightpink;">
                <img class="sidebar_image" src = "/img/profile.png"></img>
              Cold Stock</div>
            <div class="card-body">
                Their Apple Stock has lost 4 points!
            </div>
            <div class="card-footer small text-muted">
              Yesterday at 11:59 PM
            </div>
          </div>

          <!-- DataTables Example -->
          <div class="card mb-3" style="margin-right:12.5%;">
            <div class="card-header">
              <i class="fas fa-table"></i>
              Investment Table</div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Company</th>
                      <th>Quantity</th>
                      <th>Date of Purchase</th>
                      <th>Industry</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Company</th>
                      <th>Quantity</th>
                      <th>Date of Purchase</th>
                      <th>Industry</th>
                    </tr>
                  </tfoot>

                  <tbody>
                  <% stocks.forEach(item => { %>
                    <tr>
                      <td><%- item.stockcode %></td>
                      <td><%- item.qty %></td>
                      <td><%- item.timeBought %></td>
                      <td><%- item.industry %></td>
                    </tr>
                  <% }) %>

                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
          </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Your Website 2018</span>
            </div>
          </div>
        </footer>

      </div>
